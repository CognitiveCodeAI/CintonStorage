{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "npm install --include=dev",
  "buildCommand": "cd api && npm install && npx prisma generate && cd .. && npm run build",
  "outputDirectory": "dist",
  "framework": null,
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/trpc/:path*",
      "destination": "/api"
    },
    {
      "source": "/api/health",
      "destination": "/api"
    },
    {
      "source": "/api/upload",
      "destination": "/api/upload"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ]
}
