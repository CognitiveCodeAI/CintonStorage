{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd api && npm install && npx prisma generate && cd .. && cd apps/web && npm install && npm run build",
  "installCommand": "npm install -g pnpm && pnpm install --frozen-lockfile",
  "outputDirectory": "apps/web/dist",
  "framework": null,
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/trpc/:path*",
      "destination": "/api"
    },
    {
      "source": "/api/health",
      "destination": "/api"
    }
  ]
}
